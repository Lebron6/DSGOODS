                        android:background="@color/colorEditTextLine" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备注："
                            android:textColor="#ff9c9db3"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_remarks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="无"
                            android:textColor="#ff2b2c44"
                            android:textSize="14sp" />


                    </RelativeLayout>


                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/layout_c"
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_see_list"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:background="@drawable/btn_bg_last"
                android:gravity="center"
                android:text="查看货物清单"
                android:textColor="@color/colorMainBlack"
                android:textSize="16sp" />

            <Button

                android:id="@+id/btn_see_car_info"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_bg_theme"
                android:gravity="center"
                android:text="查看提货车辆信息"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
