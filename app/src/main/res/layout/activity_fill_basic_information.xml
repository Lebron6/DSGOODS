<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="44dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_circle_main"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <View
                android:layout_width="89dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_two"
                android:layout_toRightOf="@+id/tv_one"
                android:background="#EBEFFD" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_circle_gray"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorMainBlack"
                android:textSize="14sp" />

            <View
                android:layout_width="89dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_three"
                android:layout_toRightOf="@+id/tv_two"
                android:background="#EBEFFD" />

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_circle_gray"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorMainBlack"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="填写基本信息"
                android:textColor="#ff3d68eb"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="设置运输要求"
                android:textColor="@color/colorGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="填写提货清单"
                android:textColor="@color/colorGray"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ScrollView
    android:layout_above="@+id/btn_next"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorEditTextLine">

        <LinearLayout
            android:id="@+id/layout_contract"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/item_bg_bill"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_select_supplier"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="*"
                    android:textColor="@color/colorOrange"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_supplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_c"
                    android:text="选择供应商"
                    android:textColor="#ff2b2c44"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_supplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_down"
                    android:layout_toRightOf="@+id/txt_supplier"
                    android:gravity="right"
                    android:text="请选择"
                    android:textColor="#ffdbdce6"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/icon_down"
                    android:gravity="right" />
            </RelativeLayout>
            <View
                android:background="@color/colorEditTextLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/txt_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="托运合同"
                    android:textColor="#ff2b2c44"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_down_o"
                    android:layout_toRightOf="@+id/txt_contract"
                    android:gravity="right"
                    android:text="请选择"
                    android:textColor="#ffdbdce6"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_down_o"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/icon_down"
                    android:gravity="right" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_contract"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/item_bg_bill">

            <RelativeLayout
                android:id="@+id/layout_addr"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:paddingLeft="20dp">

                <RelativeLayout
                    android:id="@+id/layout_line"
                    android:layout_width="22dp"
                    android:layout_height="110dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/txt_t"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/btn_bg_theme"
                        android:gravity="center"
                        android:text="提"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/txt_s"
                        android:layout_below="@+id/txt_t"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/colorMain" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/colorMain" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/colorMain" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/colorMain" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/colorMain" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/colorMain" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/colorMain" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"

                            android:background="@color/colorMain" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_s"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/btn_bg_yellow"
                        android:gravity="center"
                        android:text="收"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/layout_line"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/layout_t_info"
                            android:layout_width="210dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_name_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="张三"
                                    android:textColor="#ff2b2c44"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_phone_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="1836776771"
                                    android:textColor="#ff2b2c44"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_addr_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="江苏省苏州市吴中区金猫9号"
                                android:textColor="#ff9c9db3"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_company_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="大洋供应链"
                                android:textColor="#ff9c9db3"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <View
                            android:id="@+id/line_t"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_toRightOf="@+id/layout_t_info"
                            android:background="@color/colorEditTextLine" />

                        <LinearLayout
                            android:id="@+id/layout_t_addr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/line_t"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/icon_address" />

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="14dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="提货地址"
                                android:textColor="#ff585974"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorEditTextLine" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/layout_s_info"
                            android:layout_width="210dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_name_s"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="张三"
                                    android:textColor="#ff2b2c44"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_phone_s"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="1836776771"
                                    android:textColor="#ff2b2c44"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_addr_s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="江苏省苏州市吴中区金猫9号"
                                android:textColor="#ff9c9db3"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_company_s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="大洋供应链"
                                android:textColor="#ff9c9db3"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <View
                            android:id="@+id/line_s"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_toRightOf="@+id/layout_s_info"
                            android:background="@color/colorEditTextLine" />

                        <LinearLayout
                            android:id="@+id/layout_s_addr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/line_s"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/icon_address" />

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="14dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="收货地址"
                                android:textColor="#ff585974"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/layout_addr"
                android:background="@color/colorEditTextLine" />

            <LinearLayout
                android:id="@+id/layout_time_t"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_below="@+id/view_line"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="*"
                        android:textColor="@color/colorOrange"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_c"
                        android:text="提货时间"
                        android:textColor="#ff2b2c44"
                        android:textSize="14sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:text="2020/06/07  12:45"
                        android:textColor="#ff2b2c44"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="----"
                        android:textColor="#ffbdbed9"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="2020/06/07  12:45"
                        android:textColor="#ff2b2c44"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>


            <View
                android:id="@+id/view_s_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/layout_time_t"
                android:background="@color/colorEditTextLine" />

            <LinearLayout
                android:id="@+id/layout_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view_s_line"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_chose_t"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:text="*"
                            android:textColor="@color/colorOrange"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_c"
                            android:text="要求到达时间"
                            android:textColor="#ff2b2c44"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:hint="请选择日期"
                        android:paddingRight="15dp"
                        android:textColorHint="@color/colorEditText"
                        android:gravity="center_vertical|right"
                        android:layout_toRightOf="@+id/layout_chose_t"
                        android:id="@+id/tv_time_arrive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:textColor="#ff2b2c44"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/view_order"
                android:layout_below="@+id/layout_time"
                android:background="@color/colorEditTextLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/layout_order"
             android:layout_below="@+id/view_order"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/txt_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="关联订单"
                    android:textColor="#ff2b2c44"
                    android:textSize="14sp" />

                <EditText
                    android:hint="请输入"
                    android:paddingRight="15dp"
                    android:textColorHint="@color/colorEditText"
                    android:layout_toRightOf="@+id/txt_order"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorMainBlack"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </RelativeLayout>
            <View
                android:id="@+id/view_num"
                android:layout_below="@+id/layout_order"
                android:background="@color/colorEditTextLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/layout_num"
                android:layout_below="@+id/view_num"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/txt_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="原始单号"
                    android:textColor="#ff2b2c44"
                    android:textSize="14sp" />

                <EditText
                    android:hint="请输入"
                    android:paddingRight="15dp"
                    android:textColorHint="@color/colorEditText"
                    android:layout_toRightOf="@+id/txt_order_num"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorMainBlack"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>
        <Button
            android:id="@+id/btn_next"
            android:layout_marginBottom="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_bg_theme"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
