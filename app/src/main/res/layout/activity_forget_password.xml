<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="手机号"
        android:textColor="#ff2b2c44"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText

            android:id="@+id/et_phone_num"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left|center_vertical"
            android:hint="请输入手机号"
            android:textSize="16sp"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/colorMainBlack"
            android:textColorHint="@color/colorEditText"
            android:textCursorDrawable="@drawable/edit_cursor_theme" />
        <View
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="短信验证码"
        android:textColor="#ff2b2c44"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:layout_toLeftOf="@+id/tv_phone_code"
                android:id="@+id/et_phone_code"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left|center_vertical"
                android:hint="请输入短信验证码"
                android:textSize="16sp"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/colorMainBlack"
                android:textColorHint="@color/colorEditText"
                android:textCursorDrawable="@drawable/edit_cursor_theme" />
            <TextView
                android:gravity="center"
                android:textColor="@color/colorMainBlack"
                android:textSize="14sp"
                android:id="@+id/tv_phone_code"
                android:text="59"
                android:background="@drawable/tv_bg_upload"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_width="103dp"
                android:layout_height="30dp" />
        </RelativeLayout>

        <View
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="密码"
        android:textColor="#ff2b2c44"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText

            android:id="@+id/et_password"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left|center_vertical"
            android:hint="请输入密码"
            android:textSize="16sp"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/colorMainBlack"
            android:textColorHint="@color/colorEditText"
            android:textCursorDrawable="@drawable/edit_cursor_theme" />
        <View
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_commit"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_bg_theme"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />
</LinearLayout>
