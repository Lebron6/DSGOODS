<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <include layout="@layout/titlebar"/>
    <RelativeLayout
        android:background="@color/colorEditTextLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/sv_goods_m"
            android:layout_above="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_goods_m"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </com.liaoinstan.springview.widget.SpringView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout_c"
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_methed"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_bg_last"
                android:gravity="center"
                android:text="属性模板"
                android:textColor="@color/colorMainBlack"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_add_goods"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_bg_theme"
                android:gravity="center"
                android:text="添加货物"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
