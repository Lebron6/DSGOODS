<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:text="密码登录"
        android:textStyle="bold"
        android:textColor="@color/colorMainBlack"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="公司编号"
        android:textColor="#ff2b2c44"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_company_num"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left|center_vertical"
            android:hint="请输入8位编号"
            android:textSize="16sp"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/colorMainBlack"
            android:textColorHint="@color/colorEditText"
            android:textCursorDrawable="@drawable/edit_cursor_theme" />
        <View
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="账号"
        android:textColor="#ff2b2c44"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_account"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left|center_vertical"
            android:hint="请输入手机号"
            android:textSize="16sp"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/colorMainBlack"
            android:textColorHint="@color/colorEditText"
            android:textCursorDrawable="@drawable/edit_cursor_theme" />
        <View
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="密码"
        android:textColor="#ff2b2c44"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <EditText
                android:layout_toLeftOf="@+id/cb_show_password"
                android:id="@+id/et_password"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left|center_vertical"
                android:hint="请输入登录密码"
                android:textSize="16sp"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/colorMainBlack"
                android:textColorHint="@color/colorEditText"
                android:textCursorDrawable="@drawable/edit_cursor_theme" />
            <CheckBox
                android:id="@+id/cb_show_password"
                android:inputType="textPassword"
                style="@style/PasswordCheckboxTheme"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="@color/colorMain"
            android:textSize="12sp"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_company_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业注册"
            android:textColor="@color/colorMain"
            android:textSize="12sp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_bg_theme"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />
</LinearLayout>
