<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorEditTextLine"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_t"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/item_bg_bill"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/txt_select_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="选择货物"
                    android:textColor="#ff2b2c44"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/layout_select_goods"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_toRightOf="@+id/txt_select_goods"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/iv_down"
                        android:gravity="center_vertical|right"
                        android:text="名称/编号"
                        android:textColor="#ff2b2c44"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_down"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/icon_down_z" />
                </RelativeLayout>

            </RelativeLayout>
            <View
                android:background="@color/colorEditTextLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/layout_chose_t"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="*"
                        android:textColor="@color/colorOrange"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_c"
                        android:text="货物数量"
                        android:textColor="#ff2b2c44"
                        android:textSize="14sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_goods_num"
                    android:hint="请输入"
                    android:paddingRight="15dp"
                    android:textColorHint="@color/colorEditText"
                    android:layout_toRightOf="@+id/layout_chose_t"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorMainBlack"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
            <View
                android:background="@color/colorEditTextLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/layout_chose_j"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="*"
                        android:textColor="@color/colorOrange"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_c"
                        android:text="件数"
                        android:textColor="#ff2b2c44"
                        android:textSize="14sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_goods_js"
                    android:hint="请输入"
                    android:paddingRight="15dp"
                    android:textColorHint="@color/colorEditText"
                    android:layout_toRightOf="@+id/layout_chose_j"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorMainBlack"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@+id/layout_t"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/item_bg_bill"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包装是否为智能周转箱"
                    android:textColor="#ff2b2c44"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/layout_bg_gray"
                    android:layout_width="72dp"
                    android:layout_height="32dp">
                    <RadioGroup
                        android:id="@+id/rg_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_f"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:checked="true"
                            android:background="@drawable/tab_bill_type"
                            android:textColor="@drawable/text_color_bill_type"
                            android:gravity="center" android:textSize="14sp"
                            android:text="否" />

                        <RadioButton
                            android:id="@+id/rb_s"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:background="@drawable/tab_bill_type"
                            android:textColor="@drawable/text_color_bill_type"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="是" />
                    </RadioGroup>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layout_center"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout_top"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/icon_reject_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="该周转箱中装了折叠的周转箱时，请准确关联"
                    android:textColor="#ff9c9db3"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/rv_num"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/layout_center"
                android:layout_width="match_parent"
                android:layout_height="150dp"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_sure"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_bg_theme"
            android:gravity="center"
            android:text="确认录入"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
