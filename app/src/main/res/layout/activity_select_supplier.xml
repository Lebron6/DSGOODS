<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <include layout="@layout/titlebar" />
<RelativeLayout
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_marginTop="5dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <com.ocean.dsgoods.view.ClearEditText
        android:paddingLeft="10dp"
        android:layout_toLeftOf="@+id/tv_search"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/filter_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_gray"
        android:hint="输入供应商名称或编号"
        android:textColor="@color/colorEditText"
        android:singleLine="true"
        android:textSize="14.0dip" />
    <TextView
        android:id="@+id/tv_search"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:textColor="#ff3d68eb"
        android:textSize="16sp"
        />
</RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorEditTextLine"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/lv_supplier"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:divider="@null" />

        <TextView
            android:id="@+id/dialog"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center"
            android:background="@drawable/bg_shape_blue"
            android:gravity="center"
            android:textColor="@color/colorMain"
            android:textSize="20.0dip"
            android:visibility="invisible" />

        <com.ocean.dsgoods.view.SideBar
            android:id="@+id/sidebar"
            android:visibility="visible"
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center" />
    </FrameLayout>

</LinearLayout>