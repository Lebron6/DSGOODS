<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEditTextLine"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:background="#436DF1"
        android:layout_height="@dimen/toolbar_margin_top"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:orientation="vertical"
       android:background="#436DF1"
       android:layout_width="match_parent"
       android:layout_height="180dp">
       <RelativeLayout
           android:paddingLeft="15dp"
           android:paddingRight="15dp"
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="38dp">
           <RelativeLayout
               android:id="@+id/layout_search"
               android:layout_alignParentLeft="true"
               android:layout_toLeftOf="@+id/iv_scan"
               android:layout_marginRight="15dp"
               android:background="@drawable/item_bg_bill"
               android:layout_centerVertical="true"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <EditText
                   android:id="@+id/et_search"
                   android:background="@null"
                   android:layout_toLeftOf="@+id/iv_search"
                   android:gravity="left|center_vertical"
                   android:hint="输入单号一键搜索"
                   android:textColorHint="@color/colorEditText"
                   android:textColor="#DBDCE6"
                   android:textSize="14sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />
               <ImageView
                   android:id="@+id/iv_search"
                   android:layout_marginRight="10dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center_vertical"
                   android:background="@mipmap/icon_search_gray"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </RelativeLayout>
           <ImageView
               android:id="@+id/iv_scan"
               android:background="@mipmap/icon_qr"
               android:layout_alignParentRight="true"
               android:layout_width="36dp"
               android:layout_height="36dp" />
       </RelativeLayout>
       <LinearLayout
           android:visibility="gone"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="15dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="100dp">
           <LinearLayout
               android:id="@+id/layout_waybill_inquiry"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent">
               <ImageView
                   android:background="@mipmap/icon_home_transport"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:textSize="14sp"
                   android:text="运单查询"
                   android:textColor="@color/colorWhite"

                   />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/layout_goods_management"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent">
               <ImageView
                   android:background="@mipmap/icon_home_carry"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="货物管理"
                   android:textColor="@color/colorWhite"
                   android:layout_marginTop="15dp"
                   android:textSize="14sp"
                   />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/layout_inventory_query"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent">
               <ImageView
                   android:background="@mipmap/icon_home_wms"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="库存查询"
                   android:textColor="@color/colorWhite"
                   android:layout_marginTop="15dp"
                   android:textSize="14sp"
                   />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/layout_system_board"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent">
               <ImageView
                   android:background="@mipmap/icon_home_statistics"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="系统看板"
                   android:textColor="@color/colorWhite"
                   android:layout_marginTop="15dp"
                   android:textSize="14sp"
                   />
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_pol"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="80dp"
    android:layout_width="match_parent"
    android:layout_height="127dp"
    android:background="@drawable/item_bg_bill">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:background="@mipmap/icon_early"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <TextView
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预警"
            android:textColor="#ff2b2c44"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_pol_num"
            android:layout_marginLeft="85dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="需要您立即处理的事项"
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
    </RelativeLayout>
   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/layout_sbyj"
           android:layout_centerInParent="true"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/tv_sbbj"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textColor="#F35959"
               android:textSize="30sp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:textSize="14sp"
               android:text="设备报警"
               android:textColor="@color/colorMainBlack"

               />
       </LinearLayout>
       <LinearLayout
           android:id="@+id/layout_ydcs"
           android:layout_centerInParent="true"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/tv_ydcs"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textColor="#DBDCE6"
               android:textSize="30sp"
               />
           <TextView
               android:id="@+id/tv_type"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:textSize="14sp"
               android:text="运单超时"
               android:textColor="@color/colorMainBlack"

               />
       </LinearLayout>
       <LinearLayout
           android:id="@+id/layout_bzdq"
           android:layout_centerInParent="true"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/tv_bzdq"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textColor="#DBDCE6"
               android:textSize="30sp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:textSize="14sp"
               android:text="包装到期"
               android:textColor="@color/colorMainBlack"

               />
       </LinearLayout>
   </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/layout_wait"
        android:layout_below="@+id/layout_pol"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="@drawable/item_bg_bill">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:background="@mipmap/icon_pending"
                android:layout_centerVertical="true"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_marginLeft="45dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待处理"
                android:textColor="#ff2b2c44"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_wait_num"
                android:layout_marginLeft="100dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff9c9db3"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="等待您处理的事项"
                android:textColor="#ff9c9db3"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_sl"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FBA962"
                    android:textSize="30sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:text="受理"
                    android:textColor="@color/colorMainBlack"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_hdqr"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_hdqr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#DBDCE6"
                    android:textSize="30sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:text="回单确认"
                    android:textColor="@color/colorMainBlack"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_ydqs"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_ydqs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#DBDCE6"
                    android:textSize="30sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:text="运单签收"
                    android:textColor="@color/colorMainBlack"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout_wait"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_bg_bill">
        <RelativeLayout
            android:id="@+id/layout_to_map_details"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tv_bill_num"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffba962"
                android:textSize="20sp"
                />
            <TextView
                android:layout_marginLeft="45dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个运单在运输中"
                android:textColor="#ff2b2c44"
                android:textSize="16sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@mipmap/icon_down"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <com.amap.api.maps.MapView
            android:id="@+id/mv_home"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.amap.api.maps.MapView>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_below="@+id/layout_wait"
        android:id="@+id/layout_tips"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/item_bg_bill">
<ImageView
    android:layout_marginLeft="15dp"
    android:background="@mipmap/advertising"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <TextView
            android:maxLines="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="一条公告一条公告一条公告一条公告一条公告一条公告一条公告一条公告一..."
            android:textColor="#ff585974"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_below="@+id/layout_tips"
        android:id="@+id/layout_frag"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:background="@drawable/item_bg_bill">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <com.ocean.dsgoods.view.NavitationLayout
                android:id="@+id/nav_tap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.ocean.dsgoods.view.NavitationLayout>

        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>
