<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/item_bg_bill"
    android:layout_width="match_parent"
    android:layout_height="114dp">
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_num"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="提货单号：35145465468"
            android:textColor="#ff2b2c44"
            android:textSize="16sp"
            />
        <CheckBox
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/cb_select"
            style="@style/SelectAllTheme"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/layout_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/layout_bg_gray"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_replace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="编辑提货清单"
            android:textColor="@color/colorMain"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
