<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout

    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/item_bg_bill"
    android:layout_width="match_parent"
    android:layout_height="192dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_hwmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货物名称：刹车片"
            android:textColor="#ff2b2c44"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货物型号："
                android:textColor="#ff9c9db3"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_hwxh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x-001"
                android:textColor="#ff2b2c44"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运单中件数："
                android:textColor="#ff9c9db3"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_hwjs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#ff2b2c44"
                android:textSize="14sp"
                />
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已扫码件数："
                android:textColor="#ff9c9db3"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_smjs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#ff2b2c44"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运单中数量："
                android:textColor="#ff9c9db3"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_hwsl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x-001"
                android:textColor="#ff2b2c44"
                android:textSize="14sp"
                />
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已扫码数量："
                android:textColor="#ff9c9db3"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_smsl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#ff2b2c44"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:background="@color/colorEditTextLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/l_ysmhwqd"
        android:gravity="center"
        android:background="@drawable/bg_shape_blue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:background="@mipmap/icon_form"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已扫码货物清单"
            android:textColor="@color/colorMain"
            android:textSize="16sp"
            />
    </LinearLayout>
</LinearLayout>
    </LinearLayout>
</LinearLayout>
