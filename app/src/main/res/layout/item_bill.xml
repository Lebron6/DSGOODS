<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout

    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/item_bg_bill"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提货单号："
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="88dp"
            android:layout_height="17dp"
            android:text="HT1316516548"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />
        <ImageView
            android:layout_marginLeft="5dp"
            android:background="@mipmap/icon_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="苏州市"
            android:textStyle="bold"
            android:textColor="#ff2b2c44"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@mipmap/sop_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柳州市"
            android:textStyle="bold"
            android:textColor="#ff2b2c44"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调度"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看"
            android:textColor="#fff35959"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="承运方："
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="88dp"
            android:layout_height="17dp"
            android:text="南京联合物流有限公司"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提货时间："
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/06/27 12:45  —  2019/06/27 13:45"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />

    </LinearLayout>
</LinearLayout>
    </LinearLayout>
</LinearLayout>
