<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_bg_bill"
            android:layout_width="match_parent"
            android:layout_height="191dp">
            <TextView
                android:id="@+id/tv_logistics_company"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="德邦物流有限公司"
                android:textColor="#ff2b2c44"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提货单位："
                    android:textColor="#ff9c9db3"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_take_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="苏州观致汽车有限公司"
                    android:textColor="#ff2b2c44"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提货地址："
                    android:textColor="#ff9c9db3"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="苏州市金猫路9号苏州市金猫路9号苏州市金猫路9号苏州市金猫路9号苏州市金猫路9号苏州市金猫路9号苏州市金猫路9号"
                    android:textColor="#ff2b2c44"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="@color/colorEditTextLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_num"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可回收箱子数："
                    android:textColor="#ff9c9db3"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_box_num"
                    android:layout_toRightOf="@+id/txt_num"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="#ff2b2c44"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tv_creat_return_box"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="92dp"
                    android:gravity="center"
                    android:background="@drawable/btn_bg_theme"
                    android:layout_height="30dp"
                    android:text="新建返箱"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
