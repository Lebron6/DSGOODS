<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="22dp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/iv_cir"
                android:text="2020/04/28  12:45"
                android:textColor="#ff9c9db3"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_cir"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_circle_main" />


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_cir"
                android:text="干线途中"
                android:textColor="#ff2b2c44"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_top">

            <View
                android:id="@+id/view_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"

                android:layout_centerInParent="true"
                android:background="@color/colorEditText" />
<LinearLayout
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_toRightOf="@+id/view_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_qsr"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签收人：张三"
                android:textColor="#ff585974"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_ckfj" android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_qsr"
                android:text="查看附件"
                android:textColor="#ff3d68eb"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/view_line"
                android:text="前方交通堵塞严重，可能影响要到达时间。"
                android:textColor="#ff585974"
                android:textSize="12sp" />
</LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
