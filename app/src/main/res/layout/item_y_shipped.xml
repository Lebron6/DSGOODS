<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout

    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/item_bg_bill"
    android:layout_width="match_parent"
    android:layout_height="259dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运单号："
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_thdh"
            android:layout_toRightOf="@+id/txt_num"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="HT1316516548"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />
        <ImageView
            android:layout_toRightOf="@+id/tv_thdh"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/icon_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_sl"
            android:background="@drawable/bg_shape_blue"
            android:layout_marginRight="20dp"
            android:text="受理"
            android:gravity="center"
            android:textColor="@color/colorMain"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="64dp"
            android:layout_height="30dp" />
    </RelativeLayout>
        <TextView
            android:id="@+id/tv_delete"
            android:gravity="center"
            android:textColor="@color/colorRed"
            android:text="删除"
            android:textSize="13sp"
            android:visibility="gone"
            android:background="@drawable/bg_red_button"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tv_sure"
            android:gravity="center"
            android:textColor="@color/colorMain"
            android:text="受理"
            android:visibility="gone"
            android:textSize="13sp"
            android:background="@drawable/bg_shape_blue"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_addr_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="苏州市"
            android:textStyle="bold"
            android:textColor="#ff2b2c44"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/iv_grass"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@mipmap/sop_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_addr_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柳州市"
            android:textStyle="bold"
            android:textColor="#ff2b2c44"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调度"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货单位："
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_sh"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="南京联合物流有限公司"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="承运单位："
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_cy"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="南京联合物流有限公司"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货物件数："
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_hwjs"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="10"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货物数量："
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_hwsl"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="10"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发货时间："
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_fhsj"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="2019/06/27 13:45"
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="要求到达时间："
            android:textColor="#ff9c9db3"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_yqddsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/06/27 12:45 "
            android:textColor="#ff2b2c44"
            android:textSize="12sp"
            />

    </LinearLayout>
</LinearLayout>
    </LinearLayout>
</LinearLayout>
